<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>OT - Questions</title>

    <!-- Style -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/master.css">
  </head>
  <body class="hr exams-part">
    <div class="page-content">
      <div class="page-navbar">
        <div class="welcome">
          <p>Welcome <span><%= username %></span></p>
        </div>
        <div class="logout">
          <a href="/logout" class="btn btn-trans">Logout</a>
        </div>
      </div>
      <div class="content-area">
        <div class="container">
          <div class="exams">
            <h3>Available Questions and Answers</h3>
            <div class="insert-box">
              <h5>Insert new question</h5>
              <form action="/question" method="post">
                <div class="form-group">
                  <label for="type">Type</label>
                  <select name="type" id="type" class="form-control" required>
                    <% for ( var i = 0; i < types.length; i++ ){ %>
                        <option value="<%= types[i].name %>"> <%= types[i].name %></option> 
                    <% } %>
                  </select>
                </div>
                <div class="quest-insert">
                  <div class="form-group">
                    <label>Question</label>
                    <input type="text" name="name" value="" class="form-control" placeholder="Question head" required>
                    <div class="answers">
                      <input type="text" name="answers[]" value="" placeholder="Answer 1" class="form-control" required>
                      <input type="text" name="answers[]" value="" placeholder="Answer 2" class="form-control" required>
                      <input type="text" name="answers[]" value="" placeholder="Answer 3" class="form-control" required>
                      <input type="text" name="answers[]" value="" placeholder="Answer 4" class="form-control" required>
                      <div class="add-new">
                        <span class="js-AddAns">+ Answer</span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="text-right">
                  <input type="submit" value="Insert" class="btn btn-success">
                </div>
              </form>
            </div>
            <% for ( var i = 0; i < quests.length; i++ ){ %>
              <div class="quests">
                <div class="quest">
                  <div class="head">
                    <h5><%= quests[i].name %> <span>- <%= quests[i].type %> </span> </h5>
                    <div class="buttons">
                      <a href="/question?id=<%=quests[i]._id%>" class="btn btn-info"><img src="icons/edit.svg" alt=""></a>
                      <a href="/question-delete?id=<%=quests[i]._id%>" class="btn btn-danger" ><img src="icons/trash.svg" alt=""></a>
                    </div>
                  </div> 
                  <div class="quest-answers">
                    <ul>
                      <% for (var j in quests[i].answers) { %>
                        <li><%=quests[i].answers[j]%></li>    
                      <% } %>
                    </ul>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    
    <script src="js/jquery.3.3.1.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
  </body>
</html>
